<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gameover"
    android:gravity="top"
    android:orientation="vertical" >

    <Button
        android:id="@+id/Btn_Confirm"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="28dp"
        android:layout_marginRight="18dp"
        android:background="@drawable/exit" />

    <ImageButton
        android:id="@+id/img_iconhighscore"
        android:layout_width="300dp"
        android:layout_height="90dp"
        android:layout_above="@+id/img_newicon"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp" />

    <ImageButton
        android:id="@+id/img_newicon"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_above="@+id/TextView_Score"
        android:layout_marginBottom="14dp"
        android:layout_marginRight="44dp"
        android:layout_toLeftOf="@+id/TextView_Score"
        android:background="@drawable/bago" />

    <TextView
        android:id="@+id/TextView_Score"
        android:layout_width="65dp"
        android:layout_height="55dp"
        android:layout_above="@+id/Btn_Confirm"
        android:layout_alignRight="@+id/Btn_Confirm"
        android:layout_marginBottom="109dp"
        android:textColor="#ffffff"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/TextView_HighScore"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_alignRight="@+id/TextView_Score"
        android:layout_alignTop="@+id/img_iconhighscore"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="40sp"
        android:textStyle="bold" />

</RelativeLayout>
